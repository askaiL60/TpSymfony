{% extends 'base.html.twig' %}

{% block title %}Modifier l'utilisateur{% endblock %}

{% block body %}
    <div class="container mt-5" style="max-width: 600px;">
        <h2 class="mb-4">Modifier l'utilisateur {{ user.email }}</h2>

        {{ form_start(form) }}

        {{ form_row(form.roles) }}

        <button type="submit" class="btn btn-primary mt-3">{{ form.save.vars.label }}</button>

        {{ form_end(form, {'render_rest': false}) }}

        <a href="{{ path('admin_users') }}" class="btn btn-secondary mt-4 d-inline-block">← Retour à la liste</a>
    </div>
{% endblock %}
